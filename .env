API_SECRET=<api_secret>
API_KEY=<api_key>
API_URL=https://api.backpack.exchange

# ========================================
# ESTRATÉGIA
# ========================================
TRADING_STRATEGY=DEFAULT # Can be DEFAULT or LEVEL

BOT_MODE=DEFAULT

# ========================================
# CAPITAL
# ========================================
VOLUME_ORDER=100
CAPITAL_PERCENTAGE=10
LIMIT_ORDER=10

# ========================================
# MERCADOS
# ========================================
TIME="5m"
AUTHORIZED_MARKET='[]'

# ========================================
# STOP LOSS
# ========================================
STOP_LOSS_TYPE=PERCENTAGE
MAX_NEGATIVE_PNL_STOP_PCT=-3
MINIMAL_VOLUME=5

# ========================================
# LEVEL STRATEGY - ADX
# ========================================
IGNORE_BRONZE_SIGNALS=true
ADX_LENGTH=14
ADX_THRESHOLD=20
ADX_AVERAGE_LENGTH=21

# ========================================
# LEVEL STRATEGY - VALIDAÇÕES
# ========================================
USE_RSI_VALIDATION=true
USE_STOCH_VALIDATION=true
USE_MACD_VALIDATION=true

# ========================================
# LEVEL STRATEGY - INDICADORES
# ========================================
RSI_LENGTH=14
RSI_AVERAGE_LENGTH=14
RSI_BULL_THRESHOLD=45
RSI_BEAR_THRESHOLD=55

STOCH_K_LENGTH=14
STOCH_D_LENGTH=3
STOCH_SMOOTH=3
STOCH_BULL_THRESHOLD=45
STOCH_BEAR_THRESHOLD=55

MACD_FAST_LENGTH=12
MACD_SLOW_LENGTH=26
MACD_SIGNAL_LENGTH=9

# ========================================
# LEVEL STRATEGY - TARGETS
# ========================================
MAX_TARGETS_PER_ORDER=5
USE_PARTIAL_TP=true

# ========================================
# TAKE PROFIT
# ========================================
MIN_TAKE_PROFIT_PCT=1.0
MIN_RISK_REWARD_RATIO=2.0
ENABLE_TP_VALIDATION=false

# ========================================
# LOGS
# ========================================
LOG="true"