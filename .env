# ========================================
# BACKPACK API CONFIGURAÇÃO
# ========================================
# URL da API Backpack Exchange
API_URL=https://api.backpack.exchange

# ========================================
# CONFIGURAÇÃO DE MERCADOS
# ========================================
# Lista de mercados autorizados (JSON array)
# Exemplo: ["SOL_USDC_PERP", "BTC_USDC_PERP"]
# Deixe vazio [] para usar todos os mercados disponíveis
AUTHORIZED_MARKET='[]' #'["BTC_USDC_PERP","SOL_USDC_PERP","ETH_USDC_PERP"]' # IF [] all is authrorized for default.

# ========================================
# CONTA 1 - ESTRATÉGIA DEFAULT
# ========================================
ACCOUNT1_API_KEY=<API_KEY_CONTA1>
ACCOUNT1_API_SECRET=<API_SECRET_CONTA1>
ACCOUNT1_NAME="Conta Principal"
ACCOUNT1_STRATEGY=DEFAULT
ACCOUNT1_ENABLED=true
ACCOUNT1_VOLUME_ORDER=100
ACCOUNT1_CAPITAL_PERCENTAGE=10
ACCOUNT1_TIME=5m
ACCOUNT1_LIMIT_ORDER=100

# ========================================
# CONTA 2 - ESTRATÉGIA PRO_MAX
# ========================================
ACCOUNT2_API_KEY=<API_KEY_CONTA2>
ACCOUNT2_API_SECRET=<API_SECRET_CONTA2>
ACCOUNT2_NAME="Conta Pro"
ACCOUNT2_STRATEGY=PRO_MAX
ACCOUNT2_ENABLED=true
ACCOUNT2_VOLUME_ORDER=50
ACCOUNT2_CAPITAL_PERCENTAGE=10
ACCOUNT2_TIME=15m
ACCOUNT2_LIMIT_ORDER=50

# ========================================
# CONFIGURAÇÕES DE PROFIT MÍNIMO
# ========================================
# Configurações para fechar posições quando atingir lucro mínimo
# (após descontar taxas da Backpack baseadas no volume de 30 dias)

# Lucro mínimo em porcentagem (após taxas) - Valor inteiro (ex: 10 = 10%)
MIN_PROFIT_PERCENTAGE=10

# ========================================
# CONFIGURAÇÕES DE STOP LOSS (DEFAULT)
# ========================================
# Stop loss em porcentagem - Valor inteiro (ex: 4 = 4%)
MAX_NEGATIVE_PNL_STOP_PCT=-4

# Volume mínimo para manter posição (DEFAULT strategy only)
MINIMAL_VOLUME=0.01
