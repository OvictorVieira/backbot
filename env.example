# ========================================
# BACKPACK API CONFIGURAÇÃO
# ========================================
# URL da API Backpack Exchange
API_URL=https://api.backpack.exchange

# ========================================
# CONFIGURAÇÕES MULTI-BOT (MODO MÚLTIPLAS CONTAS)
# ========================================
# Para usar múltiplas contas, configure as seções abaixo
# O bot detectará automaticamente se deve usar modo único ou múltiplo

# ========================================
# CONTA 1 - CONFIGURAÇÃO - ESTRATÉGIA DEFAULT
# ========================================
# Credenciais da CONTA 1 (usadas para estratégia DEFAULT no modo single)
ACCOUNT1_API_KEY=<API_KEY_CONTA1>
ACCOUNT1_API_SECRET=<API_SECRET_CONTA1>
ACCOUNT1_NAME="Conta Principal"
ACCOUNT1_STRATEGY=DEFAULT
ACCOUNT1_ENABLED=true

# Configurações específicas da CONTA 1 - ESTRATÉGIA DEFAULT
ACCOUNT1_VOLUME_ORDER=100
ACCOUNT1_CAPITAL_PERCENTAGE=40
ACCOUNT1_LIMIT_ORDER=100
ACCOUNT1_TIME=5m

# ========================================
# CONTA 2 - CONFIGURAÇÃO - ESTRATÉGIA PRO_MAX
# ========================================
# Credenciais da CONTA 2 (usadas para estratégia PRO_MAX no modo single)
ACCOUNT2_API_KEY=<API_KEY_CONTA2>
ACCOUNT2_API_SECRET=<API_SECRET_CONTA2>
ACCOUNT2_NAME="Conta Pro"
ACCOUNT2_STRATEGY=PRO_MAX
ACCOUNT2_ENABLED=true

# Configurações específicas da CONTA 2 - ESTRATÉGIA PRO_MAX
ACCOUNT2_VOLUME_ORDER=50
ACCOUNT2_CAPITAL_PERCENTAGE=30
ACCOUNT2_LIMIT_ORDER=50
ACCOUNT2_TIME=15m

# Configurações específicas da estratégia PRO_MAX para CONTA 2
ACCOUNT2_IGNORE_BRONZE_SIGNALS=true
ACCOUNT2_ADX_LENGTH=14
ACCOUNT2_ADX_THRESHOLD=20

# ========================================
# CONTA 3 - CONFIGURAÇÃO (OPCIONAL)
# ========================================
ACCOUNT3_API_KEY=<API_KEY_CONTA3>
ACCOUNT3_API_SECRET=<API_SECRET_CONTA3>
ACCOUNT3_NAME="Conta 3"
ACCOUNT3_STRATEGY=DEFAULT
ACCOUNT3_ENABLED=false

# ========================================
# CONTA 4 - CONFIGURAÇÃO (OPCIONAL)
# ========================================
ACCOUNT4_API_KEY=<API_KEY_CONTA4>
ACCOUNT4_API_SECRET=<API_SECRET_CONTA4>
ACCOUNT4_NAME="Conta 4"
ACCOUNT4_STRATEGY=PRO_MAX
ACCOUNT4_ENABLED=false

# ========================================
# ESTRATÉGIA DE TRADING (MODO CONTA ÚNICA)
# ========================================
# Estratégia a ser utilizada pelo bot (modo conta única)
# Opções: DEFAULT, PRO_MAX
# 
# IMPORTANTE: 
# - DEFAULT: Usa credenciais da CONTA1 (ACCOUNT1_API_KEY/ACCOUNT1_API_SECRET)
# - PRO_MAX: Usa credenciais da CONTA2 (ACCOUNT2_API_KEY/ACCOUNT2_API_SECRET)
TRADING_STRATEGY=PRO_MAX

# ========================================
# GERENCIAMENTO DE CAPITAL (MODO CONTA ÚNICA)
# ========================================
# Volume por operação (USD) - usado quando CAPITAL_PERCENTAGE = 0
VOLUME_ORDER=100

# Porcentagem do capital disponível para cada operação (0-100)
# Se > 0: usa porcentagem do capital
# Se = 0: usa VOLUME_ORDER (valor fixo)
CAPITAL_PERCENTAGE=0

# Máximo de ordens abertas simultaneamente
LIMIT_ORDER=33

# ========================================
# CONFIGURAÇÃO DE MERCADOS
# ========================================
# Lista de mercados autorizados (JSON array)
# Exemplo: ["SOL_USDC_PERP", "BTC_USDC_PERP"]
# Deixe vazio [] para usar todos os mercados disponíveis
AUTHORIZED_MARKET='[]' #'["BTC_USDC_PERP","SOL_USDC_PERP","ETH_USDC_PERP"]' # IF [] all is authorized for default.

# Timeframe dos candlesticks (modo conta única)
# Opções: 1m, 5m, 15m, 1h, 4h, 1d
TIME="5m"

# ========================================
# MODOS DE OPERAÇÃO
# ========================================
# Modo de operação do bot
# Opções: DEFAULT, AUTOMATIC_STOP
BOT_MODE="DEFAULT" # DEFAULT OR AUTOMATIC_STOP

# ========================================
# CONFIGURAÇÃO DE STOP LOSS
# ========================================
# O stop loss é automaticamente selecionado baseado na estratégia (TRADING_STRATEGY)
# Cada estratégia pode ter sua própria lógica de stop loss

# Tipo de stop loss (USD ou PERCENTAGE) - usado pela estratégia DEFAULT
# Opções: USD, PERCENTAGE
# Padrão: USD
STOP_LOSS_TYPE=USD

# Stop loss em USD (valor negativo) - usado quando STOP_LOSS_TYPE=USD
MAX_NEGATIVE_PNL_STOP=-0.3

# Stop loss em porcentagem (valor negativo) - usado quando STOP_LOSS_TYPE=PERCENTAGE
MAX_NEGATIVE_PNL_STOP_PCT=-4

# Volume mínimo para manter posição (USD) - usado apenas pela estratégia DEFAULT
MINIMAL_VOLUME=5

# Stop loss mínimo (valor positivo)
MINIMAL_PNL_STOP=0.5

# ========================================
# CONFIGURAÇÃO DE TAKE PROFIT MÍNIMO
# ========================================
# Take profit mínimo em porcentagem (valor positivo)
# Exemplo: 0.5 = realiza lucro parcial quando posição atinge 0.5% de lucro
MIN_TAKE_PROFIT_PCT=0.5

# Habilitar monitoramento de take profit mínimo em tempo real
# Se true: realiza lucro parcial quando critério mínimo é atingido
# Se false: mantém posições abertas até atingir take profit ou stop loss
ENABLE_TP_VALIDATION=false

# Porcentagem da posição para realizar take profit parcial (0-100)
# Exemplo: 50 = realiza 50% da posição quando critério mínimo é atingido
TP_PARTIAL_PERCENTAGE=50

# ========================================
# CONFIGURAÇÃO DA ESTRATÉGIA PRO_MAX (ADX)
# ========================================
# Ignorar sinais BRONZE (apenas SILVER, GOLD e DIAMOND)
# Se true: ignora sinais com apenas 1 confluência (BRONZE)
# Se false: aceita todos os sinais incluindo BRONZE
IGNORE_BRONZE_SIGNALS=true

# Configurações ADX
ADX_LENGTH=14
ADX_THRESHOLD=20
ADX_AVERAGE_LENGTH=21

# Configurações de validação de indicadores
USE_RSI_VALIDATION=true
USE_STOCH_VALIDATION=true
USE_MACD_VALIDATION=true

# Configurações RSI
RSI_LENGTH=14
RSI_AVERAGE_LENGTH=14
RSI_BULL_THRESHOLD=45
RSI_BEAR_THRESHOLD=55

# Configurações Stochastic
STOCH_K_LENGTH=14
STOCH_D_LENGTH=3
STOCH_SMOOTH=3
STOCH_BULL_THRESHOLD=45
STOCH_BEAR_THRESHOLD=55

# Configurações MACD
MACD_FAST_LENGTH=12
MACD_SLOW_LENGTH=26
MACD_SIGNAL_LENGTH=9

# Configurações das zonas de objetivo (targets)
# Quantidade máxima de alvos por operação (LONG e SHORT)
MAX_TARGETS_PER_ORDER=20

# Multiplicador base do ATR para calcular distância entre zonas
# ATR_ZONE_MULTIPLIER=2.0 (fixo no código)

# Período ATR para cálculo das zonas
# ATR_PERIOD=14 (fixo no código)

# Multiplicador ATR para Stop Loss
# SL_ATR_MULTIPLIER=1.5 (fixo no código)

# Dias mínimos desde listagem do token (para evitar tokens novos)
MIN_DAYS_SINCE_LISTING=90

# ========================================
# CONFIGURAÇÃO DE LOGS
# ========================================
# Ativar logs
LOG="true" 