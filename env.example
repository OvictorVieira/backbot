# ========================================
# BACKPACK API CONFIGURAÇÃO
# ========================================
# URL da API Backpack Exchange
API_URL=https://api.backpack.exchange

# ========================================
# CONFIGURAÇÕES MULTI-BOT (RECOMENDADO)
# ========================================
# Configure múltiplas contas para executar diferentes estratégias simultaneamente

# ========================================
# CONTA 1 - ESTRATÉGIA DEFAULT
# ========================================
ACCOUNT1_API_KEY=<API_KEY_CONTA1>
ACCOUNT1_API_SECRET=<API_SECRET_CONTA1>
ACCOUNT1_NAME="Conta Principal"
ACCOUNT1_STRATEGY=DEFAULT
ACCOUNT1_ENABLED=true
ACCOUNT1_VOLUME_ORDER=100
ACCOUNT1_CAPITAL_PERCENTAGE=40
ACCOUNT1_TIME=5m
ACCOUNT1_LIMIT_ORDER=100

# ========================================
# CONTA 2 - ESTRATÉGIA PRO_MAX
# ========================================
ACCOUNT2_API_KEY=<API_KEY_CONTA2>
ACCOUNT2_API_SECRET=<API_SECRET_CONTA2>
ACCOUNT2_NAME="Conta Pro"
ACCOUNT2_STRATEGY=PRO_MAX
ACCOUNT2_ENABLED=true
ACCOUNT2_VOLUME_ORDER=50
ACCOUNT2_CAPITAL_PERCENTAGE=30
ACCOUNT2_TIME=15m
ACCOUNT2_LIMIT_ORDER=50

# Configurações específicas da estratégia PRO_MAX para CONTA 2
ACCOUNT2_IGNORE_BRONZE_SIGNALS=true
ACCOUNT2_ADX_LENGTH=14
ACCOUNT2_ADX_THRESHOLD=20
ACCOUNT2_ADX_AVERAGE_LENGTH=21

# Configurações de validação de indicadores para CONTA 2
ACCOUNT2_USE_RSI_VALIDATION=true
ACCOUNT2_USE_STOCH_VALIDATION=true
ACCOUNT2_USE_MACD_VALIDATION=true

# Configurações RSI para CONTA 2
ACCOUNT2_RSI_LENGTH=14
ACCOUNT2_RSI_AVERAGE_LENGTH=14
ACCOUNT2_RSI_BULL_THRESHOLD=45
ACCOUNT2_RSI_BEAR_THRESHOLD=55

# Configurações Stochastic para CONTA 2
ACCOUNT2_STOCH_K_LENGTH=14
ACCOUNT2_STOCH_D_LENGTH=3
ACCOUNT2_STOCH_SMOOTH=3
ACCOUNT2_STOCH_BULL_THRESHOLD=45
ACCOUNT2_STOCH_BEAR_THRESHOLD=55

# Configurações MACD para CONTA 2
ACCOUNT2_MACD_FAST_LENGTH=12
ACCOUNT2_MACD_SLOW_LENGTH=26
ACCOUNT2_MACD_SIGNAL_LENGTH=9

# Configurações de alvos para CONTA 2
ACCOUNT2_MAX_TARGETS_PER_ORDER=20
ACCOUNT2_MIN_DAYS_SINCE_LISTING=90

# ========================================
# CONTA 3 - CONFIGURAÇÃO (OPCIONAL)
# ========================================
ACCOUNT3_API_KEY=<API_KEY_CONTA3>
ACCOUNT3_API_SECRET=<API_SECRET_CONTA3>
ACCOUNT3_NAME="Conta 3"
ACCOUNT3_STRATEGY=DEFAULT
ACCOUNT3_ENABLED=false
ACCOUNT3_VOLUME_ORDER=100
ACCOUNT3_CAPITAL_PERCENTAGE=20
ACCOUNT3_TIME=5m
ACCOUNT3_LIMIT_ORDER=50

# ========================================
# CONTA 4 - CONFIGURAÇÃO (OPCIONAL)
# ========================================
ACCOUNT4_API_KEY=<API_KEY_CONTA4>
ACCOUNT4_API_SECRET=<API_SECRET_CONTA4>
ACCOUNT4_NAME="Conta 4"
ACCOUNT4_STRATEGY=PRO_MAX
ACCOUNT4_ENABLED=false
ACCOUNT4_VOLUME_ORDER=50
ACCOUNT4_CAPITAL_PERCENTAGE=15
ACCOUNT4_TIME=15m
ACCOUNT4_LIMIT_ORDER=30

# ========================================
# CONFIGURAÇÃO DE LOGS
# ========================================
# Ativar logs coloridos por conta
LOG=true 