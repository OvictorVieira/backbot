# ========================================
# BACKPACK API CREDENTIALS
# ========================================
PRIVATE_KEY=<PRIVATE_KEY>
PUBLIC_KEY=<PUBLIC_KEY>
API_URL=https://api.backpack.exchange

# ========================================
# ESTRATÉGIA DE TRADING
# ========================================
# Estratégia a ser utilizada pelo bot
# Opções: DEFAULT, LEVEL
TRADING_STRATEGY=DEFAULT

# ========================================
# GERENCIAMENTO DE CAPITAL
# ========================================
# Volume por operação (USD) - usado quando CAPITAL_PERCENTAGE = 0
VOLUME_ORDER=100

# Porcentagem do capital disponível para cada operação (0-100)
# Se > 0: usa porcentagem do capital
# Se = 0: usa VOLUME_ORDER (valor fixo)
CAPITAL_PERCENTAGE=0

# Máximo de ordens abertas simultaneamente
LIMIT_ORDER=33

# ========================================
# CONFIGURAÇÃO DE MERCADOS
# ========================================
# Lista de mercados autorizados (JSON array)
# Exemplo: ["SOL_USDC_PERP", "BTC_USDC_PERP"]
# Deixe vazio [] para usar todos os mercados disponíveis
AUTHORIZED_MARKET='[]' #'["BTC_USDC_PERP","SOL_USDC_PERP","ETH_USDC_PERP"]' # IF [] all is authrorized for default.

# Timeframe dos candlesticks
# Opções: 1m, 5m, 15m, 1h, 4h, 1d
TIME="5m"

# ========================================
# MODOS DE OPERAÇÃO
# ========================================
# Modo de operação do bot
# Opções: DEFAULT, AUTOMATIC_STOP
BOT_MODE="DEFAULT" # DEFAULT OR AUTOMATIC_STOP

# ========================================
# CONFIGURAÇÃO DE STOP LOSS
# ========================================
# O stop loss é automaticamente selecionado baseado na estratégia (TRADING_STRATEGY)
# Cada estratégia pode ter sua própria lógica de stop loss

# Tipo de stop loss (USD ou PERCENTAGE) - usado pela estratégia DEFAULT
# Opções: USD, PERCENTAGE
# Padrão: USD
STOP_LOSS_TYPE=USD

# Stop loss em USD (valor negativo) - usado quando STOP_LOSS_TYPE=USD
MAX_NEGATIVE_PNL_STOP=-0.3

# Stop loss em porcentagem (valor negativo) - usado quando STOP_LOSS_TYPE=PERCENTAGE
MAX_NEGATIVE_PNL_STOP_PCT=-4

# Volume mínimo para manter posição (USD)
MINIMAL_VOLUME=5

# Stop loss mínimo (valor positivo)
MINIMAL_PNL_STOP=0.5

# ========================================
# CONFIGURAÇÃO DE TAKE PROFIT MÍNIMO
# ========================================
# Take profit mínimo em porcentagem (valor positivo)
MIN_TAKE_PROFIT_PCT=0.5

# Razão risco/recompensa mínima (valor positivo)
# Exemplo: 1.5 significa que o lucro deve ser 1.5x maior que o risco
MIN_RISK_REWARD_RATIO=1.5

# Habilitar validação de take profit em tempo real
# Se true: fecha posições que não atendem mais aos critérios mínimos
# Se false: mantém posições abertas até atingir take profit ou stop loss
ENABLE_TP_VALIDATION=false

# ========================================
# CONFIGURAÇÃO DE LOGS
# ========================================
# Ativar logs
LOG="true"

# ========================================
# EXEMPLOS DE CONFIGURAÇÃO
# ========================================

# Para usar porcentagem do capital ao invés de valor fixo:
# CAPITAL_PERCENTAGE=5  # 5% do capital disponível
# VOLUME_ORDER=100      # mantém como fallback

# Para usar estratégia LEVEL:
# TRADING_STRATEGY=LEVEL

# Para configuração mais conservadora:
# CAPITAL_PERCENTAGE=2
# LIMIT_ORDER=10
# MAX_NEGATIVE_PNL_STOP=-0.5

# Para configuração mais agressiva:
# CAPITAL_PERCENTAGE=10
# LIMIT_ORDER=50
# MAX_NEGATIVE_PNL_STOP=-0.1 